{% block form_tabs %}
{% set action = client_id ? 'edit' : 'create' %}
{% set _filter_json = {'filter[client_id][value]':client_id} %}
{% if current_client is not defined %}
{% set current_client = client %}
{% endif %}

<div class="client_tabs_block">
    <ul class="nav nav-tabs span7">
        <li {% if active_tab=='client' %}class="active"{% endif %}>
            <a href="{{ path('admin_sonata_client_client_'~action, {'id':client_id}) }}">Général</a>
        </li>
        {% if client_id  %}
        <li {% if active_tab=='contact' %}class="active"{% endif %}>
            <a href="{{ path('admin_sonata_client_contact_list', _filter_json) }}">Contacts</a>
        </li>
        <li {% if active_tab=='document' %}class="active"{% endif %}>
            <a href="{{ path('admin_sonata_client_document_list', _filter_json) }}">Documents</a>
        </li>
        <li {% if active_tab=='garantie' %}class="active"{% endif %}>
            <a href="{{ path('admin_sonata_client_garantie_list', _filter_json) }}">Garanties</a>
        </li>
        <li {% if active_tab=='coordonnees' %}class="active"{% endif %}>
            <a href="{{ path('admin_sonata_client_coordonnees_list', _filter_json) }}">Coordonnées B.</a>
        </li>
        <li {% if active_tab=='commentaire' %}class="active"{% endif %}>
            <a href="{{ path('admin_sonata_client_commentaire_list', _filter_json) }}">Commentaires</a>
        </li>
        {#<li {% if active_tab=='tarif' %}class="active"{% endif %}>#}
            {#<a href="{{ path('admin_sonata_client_tarif_list', _filter_json) }}">Tarif</a>#}
        {#</li>#}
        <li {% if active_tab=='compte' %}class="active"{% endif %}>
            <a href="{{ path('admin_sonata_client_compte_list', _filter_json) }}">Compte</a>
        </li>
        <li {% if active_tab=='compte_de_depot' %}class="active"{% endif %}>
            <a href="{{ path('admin_sonata_client_comptededepot_list', _filter_json) }}">Compte de dépôt</a>
        </li>
        <li {% if active_tab=='impression' %}class="active"{% endif %}>
            <a href="{{ path('impression_index', _filter_json) }}">Impression</a>
        </li>
        {% endif %}
    </ul>
    {% if client_id  %}
    
    
      <div class="span3">
	    	{% if get_controller_name() != 'client'  %}  <button rel="tooltip" class="btn pull-right" id="toggleImportModal" onclick="javascript:$('#importModal').modal('toggle');" data-original-title="Import Initial"><i class="icon icon-hdd"></i> Import Initial</button>{% endif %}
	        <button class="btn pull-right" onclick="javascript:location.href = '{{ path('admin_sonata_clientoperations_v01tva_list', _filter_json) }}'.replace('&amp;', '&');"><i class="icon icon-th-list"></i> Voir les opérations</button>
	  </div>
	  
	{% if get_controller_name() != 'client'  %}  
	  <div class="modal hide fade" id="importModal" tabindex="-1" role="dialog" aria-labelledby="importModalLabel"
     aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 id="importModalLabel">{{'Import Initial'|trans}}</h3>
    </div>
    <div class="modal-body">
        <p>

        <form class="form-inline {{ get_controller_name() }}" id="importForm" method="post"
              action="{{ admin.generateUrl('initialImport', _filter_json) }}"
              enctype="multipart/form-data">
            <input id="inputFile" type="file" name="inputFile" style="display:none"/>
            <input id="inputFileCover" class="input-large" type="text"/>
            <a class="btn" onclick="$('input[id=inputFile]').click();">{{ 'choisir le fichier'|trans }}</a>
        </form>
        
        </p>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" id="doImport" onclick="javascript:$('#importForm').submit();">{{ 'Importer'|trans}}</button>
        <button class="btn" data-dismiss="modal" aria-hidden="true">{{ 'Fermer'|trans }}</button>
    </div>
	</div>
	{% endif %}
	
	  
    {% endif %}
</div>
{% endblock %}