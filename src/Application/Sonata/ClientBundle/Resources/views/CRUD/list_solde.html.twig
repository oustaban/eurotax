{% extends 'SonataAdminBundle:CRUD:base_list_field.html.twig' %}

{% set value = globalsGet('SonataAdminBundle_Compte_list_solde') %}

{% block field %}
    {% if not globalsGet('SonataAdminBundle_Compte_list_solde') is null %}
        {% set value = globalsInc('SonataAdminBundle_Compte_list_solde', object.getMontant) %}
        <span {% if value<0 %}style="color:red;"{% endif %}>
            {{ value }}
        </span>
    {% else %}
        &nbsp;
    {% endif %}
{% endblock field %}
