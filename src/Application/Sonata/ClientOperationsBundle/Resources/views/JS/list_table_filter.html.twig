{% block tableFilter_js %}
<script src="{{ asset('bundles/applicationsonataclientoperations/js/jquery.columnfilters.js') }}" type="text/javascript"></script>
{% endblock tableFilter_js %}

{% block tableFilter %}
<script type="text/javascript">
    $(function () {
        $('.sonata-ba-list .table').columnFilters({
            {% if not admin.getLocking %}excludeColumns:[0, 1], {% endif %}
            excludeRowClass: ['.totals_row'],
            wildCard:false,
            alternateRowClassNames:['rowa', 'rowb']
        });

        $('.sonata-ba-list .table .filterColumns td:first').prepend('<button rel="tooltip" class="emptyColumnFilters" title="Oter filtre" class="btn"><i class="icon icon-remove"></i></button>');
        
        //smaller search input width
        $('.v07ex #clone_filterText5, .v07ex #_filterText5, .v01tva #clone_filterText5, .v01tva #_filterText5, .v01tva #clone_filterText11, .v01tva #_filterText11').css('width', '40px');
        
    });
</script>
{% endblock tableFilter %}