{% extends 'ApplicationSonataClientOperationsBundle::standard_layout.html.twig' %}

{% block page_title %}
    {{parent()}} <span style="float: right;">{{client}}</span>
{% endblock page_title %}

{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="{{ asset('bundles/applicationsonataclientoperations/css/datepicker.css') }}" type="text/css" media="all"/>
{% endblock %}

{% block javascripts %}
    {{parent()}}
    <script src="{{ asset('bundles/applicationsonataclientoperations/js/bootstrap-datepicker.js') }}" type="text/javascript"></script>
