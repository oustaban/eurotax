{% extends 'ApplicationSonataClientOperationsBundle::standard_layout.html.twig' %}

{% block form_client_topinfo %}
{% endblock form_client_topinfo %}

{% block title %}
    {{parent()}} {{client}}
{% endblock title %}

{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="{{ asset('bundles/applicationsonataclientoperations/css/datepicker.css') }}" type="text/css" media="all"/>
{% endblock %}

{% block javascripts %}
    {{parent()}}
    <script src="{{ asset('bundles/applicationsonataclientoperations/js/bootstrap-datepicker.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/applicationsonataclientoperations/js/locales/bootstrap-datepicker.'~default_locale~'.js') }}" type="text/javascript"></script>
    <script type="text/javascript">
        $(window).load(function(){
            $('.datepicker').datepicker({language:'{{default_locale}}', format:'{{ admin.getDateFormat }}'});
        });
    </script>
{% endblock javascripts %}