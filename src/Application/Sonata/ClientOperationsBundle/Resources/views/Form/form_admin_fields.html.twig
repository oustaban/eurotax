{% extends ':Form:fields.html.twig' %}

{% block date_widget %}
{% spaceless %}
{% if widget == 'single_text' %}
{{ block('field_widget') }}
{% else %}
<div {{ block('widget_container_attributes') }}>
    {% set month_text = 'ApplicationSonataClientOperationsBundle.form.Month' %}
    {% set year_text = 'ApplicationSonataClientOperationsBundle.form.Year' %}

    {{ form_widget(form.day) }} {{month_text|trans}} {{form_widget(form.month)}} {{year_text|trans}} {{form_widget(form.year)}}
</div>
{% endif %}
{% endspaceless %}
{% endblock date_widget %}
