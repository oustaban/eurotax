{% endblock location_row %}


{% block amount_widget %}
    {% spaceless %}
    <div class="controls sonata-ba-field sonata-ba-field-{{ sonata_admin.edit }}-{{ sonata_admin.inline }} {% if errors|length > 0 %}sonata-ba-field-error{% endif %}">
        {% for child in form %}
            {{ form_widget(child) }}
        {% endfor %}
    </div>
    {% endspaceless %}
{% endblock amount_widget %}

